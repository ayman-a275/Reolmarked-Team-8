<Window x:Class="Reolmarked.View.EditShelfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reolmarked.View"
        mc:Ignorable="d"
        Title="Redigere Reol" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Redigere Reol" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#212529" 
                           Margin="0,0,0,20"/>

                <Label Content="Reol nummer" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding ShelfToEdit.ShelfNumber}" 
                         Style="{StaticResource ModernTextBox}"
                         IsEnabled="False"
                         Background="#e9ecef"
                         Margin="0,0,0,15"/>

                <Label Content="Reol type" Style="{StaticResource FormLabel}"/>
                <ComboBox 
                    ItemsSource="{Binding ShelfTypes}" 
                    DisplayMemberPath="ShelfTypeName" 
                    SelectedValuePath="ShelfTypeId" 
                    SelectedValue="{Binding SelectedShelfTypeId, Mode=TwoWay}"
                    Height="40"
                    FontSize="14"
                    Margin="0,0,0,20"/> 

                <Label Content="Status" Style="{StaticResource FormLabel}"/>
                <Border Margin="0,0,0,15">
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource StatusBadge}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShelfToEdit.ShelfRented}" Value="True">
                                    <Setter Property="Background" Value="#dc3545"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ShelfToEdit.ShelfRented}" Value="False">
                                    <Setter Property="Background" Value="#28a745"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Foreground="White" FontWeight="SemiBold" FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShelfToEdit.ShelfRented}" Value="True">
                                        <Setter Property="Text" Value="Udlejet"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ShelfToEdit.ShelfRented}" Value="False">
                                        <Setter Property="Text" Value="Ledig"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <StackPanel Visibility="{Binding IsShelfRented, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Label Content="Lejet af" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding RenterName}" 
                             Style="{StaticResource ModernTextBox}"
                             IsEnabled="False"
                             Background="#e9ecef"
                             Margin="0,0,0,15"/>

                    <Label Content="Aftalt pris (kr./måned)" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding AgreedPrice, StringFormat='{}{0:C}', ConverterCulture=da-DK}" 
                             Style="{StaticResource ModernTextBox}"
                             IsEnabled="False"
                             Background="#e9ecef"
                             Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Command="{Binding SaveChangesCommand}" 
                            Content="Gem ændringer" 
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,10,0"/>

                    <Button Command="{Binding CancelCommand}" 
                            Content="Annuller" 
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Reol Typer - Oversigt" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#212529" 
                           Margin="0,0,0,20"/>

                <ListView Grid.Row="1" 
                          ItemsSource="{Binding ShelfTypes}" 
                          Background="White"
                          BorderBrush="#dee2e6"
                          BorderThickness="1"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          AlternationCount="2">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent" 
                                    Padding="15"
                                    Margin="5"
                                    CornerRadius="6"
                                    BorderBrush="#dee2e6"
                                    BorderThickness="1">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding ShelfTypeName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16" 
                                                   Foreground="#212529"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding ShelfTypePrice, StringFormat='{}{0:C}', ConverterCulture=da-DK}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14" 
                                                   Foreground="#007bff"/>
                                    </Grid>

                                    <TextBlock Text="{Binding ShelfTypeDescription}" 
                                               FontSize="14" 
                                               Foreground="#6c757d" 
                                               TextWrapping="Wrap" 
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Window>