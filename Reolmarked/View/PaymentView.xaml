<UserControl x:Class="Reolmarked.View.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reolmarked.View"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#f8f9fa">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Scanner Vare" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#212529" 
                           Margin="0,0,0,20"/>

                <Label Content="Serie nummer (scan eller indtast)" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding ProductSerialNumber, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,20"/>

                <Button Command="{Binding AddProductToPaymentBtnClickCommand}" 
                        Content="Tilføj vare til kurv" 
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,30"/>

                <Separator Background="#dee2e6" Margin="0,0,0,20"/>

                <Label Content="Betalingsmetode" Style="{StaticResource FormLabel}"/>
                <ComboBox ItemsSource="{Binding PaymentMethods}" 
                         DisplayMemberPath="PaymentMethodName" 
                         SelectedValuePath="PaymentMethodId" 
                         SelectedValue="{Binding PaymentMethodId, Mode=TwoWay}"
                         Height="40"
                         FontSize="14"
                         Margin="0,0,0,20"/>

                <Label Content="Betalt beløb" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding PaymentPaidAmount, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,10"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource CardStyle}" Background="#e8f5e9">
            <StackPanel>
                <TextBlock Text="Total" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#495057"
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding ProductsTotalPrice, StringFormat=C, ConverterCulture=da-DK}" 
                           Style="{StaticResource TotalLabel}"
                           Margin="0,0,0,20"/>

                <Button Command="{Binding PayBtnClickCommand}" 
                        Content="Gennemfør Betaling" 
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Stretch"
                        Height="50"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Indkøbskurv" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#212529"
                               VerticalAlignment="Center"/>
                    <Border Background="#007bff" 
                            CornerRadius="12" 
                            Padding="8,4" 
                            Margin="15,0,0,0">
                        <TextBlock Text="{Binding ProductsToPay.Count}" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   FontSize="14"/>
                    </Border>
                </StackPanel>

                <DataGrid Grid.Row="1" 
                         ItemsSource="{Binding ProductsToPay}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         CanUserReorderColumns="False"
                         CanUserResizeRows="False"
                         GridLinesVisibility="Horizontal"
                         HeadersVisibility="Column"
                         Background="White"
                         RowBackground="White"
                         AlternatingRowBackground="#f8f9fa"
                         FontSize="14">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Serie nummer" Binding="{Binding ProductSerialNumber}" Width="*"/>
                        <DataGridTextColumn Header="Reol" Binding="{Binding RackNumber}" Width="80"/>
                        <DataGridTextColumn Header="Pris" Binding="{Binding ProductPrice, StringFormat=C, ConverterCulture=da-DK}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#28a745"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Height" Value="45"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e9ecef"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>