<UserControl x:Class="Reolmarked.View.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reolmarked.View"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#f8f9fa">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Tilføj Ny Vare" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#212529" 
                           Margin="0,0,0,20"/>

                <Label Content="Reol nummer" Style="{StaticResource FormLabel}"/>
                <ComboBox ItemsSource="{Binding Shelfs}" 
                    DisplayMemberPath="ShelfNumber" 
                    SelectedItem="{Binding SelectedShelf, Mode=TwoWay}"
                    Height="40"
                    FontSize="14"
                    Margin="0,0,0,20"/>

                <Label Content="Serie nummer (stregkode)" Style="{StaticResource FormLabel}"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding ProductSerialNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                             IsEnabled="False" 
                             Style="{StaticResource ModernTextBox}"
                             Background="#e9ecef"
                             Margin="0,0,10,0"/>

                    <Button Grid.Column="1"
                            Command="{Binding GenerateBarCodeBtnClickCommand}" 
                            Content="Generer" 
                            Style="{StaticResource SuccessButton}"
                            Width="100"/>
                </Grid>

                <Label Content="Beskrivelse" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding ProductDescription, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,25"/>

                <Label Content="Pris (kr.)" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding ProductPrice, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,25"/>

                <Button Command="{Binding AddProductBtnClickCommand}" 
                        Content="Tilføj Produkt" 
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Stretch"
                        Height="45"
                        FontSize="16"
                        Margin="0,0,0,15"/>

                <Button Command="{Binding PrintBarCodeBtnClickCommand}" 
                        Content="Print Stregkode" 
                        Background="#6c757d"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="16,8"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        HorizontalAlignment="Stretch"
                        Height="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5a6268"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Antal Varer" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#212529"
                               VerticalAlignment="Center"/>
                    <Border Background="#28a745" 
                            CornerRadius="5" 
                            Padding="8,4" 
                            Margin="15,0,0,0">
                        <TextBlock Text="{Binding Products.Count}" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   FontSize="14"/>
                    </Border>
                </StackPanel>

                <ListView Grid.Row="1" 
                          ItemsSource="{Binding Products}" 
                          Background="White"
                          BorderBrush="#dee2e6"
                          BorderThickness="1"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          AlternationCount="2">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent" 
                                    Padding="15"
                                    Margin="5"
                                    CornerRadius="6"
                                    BorderBrush="#dee2e6"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Serie nummer: " 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14" 
                                                   Foreground="#495057"/>
                                        <TextBlock Text="{Binding ProductSerialNumber}" 
                                                   FontWeight="Bold" 
                                                   FontSize="14" 
                                                   Foreground="#212529"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="{Binding ProductPrice, StringFormat='{}{0:C}', ConverterCulture=da-DK}" 
                                               FontWeight="Bold" 
                                               FontSize="16" 
                                               Foreground="#28a745"
                                               VerticalAlignment="Center"/>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Reol: " 
                                                   FontWeight="SemiBold" 
                                                   FontSize="13" 
                                                   Foreground="#495057"/>
                                        <TextBlock Text="{Binding ShelfNumber}" 
                                                   FontSize="13" 
                                                   Foreground="#212529"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="2" Grid.Column="0" 
                                               Text="{Binding ProductDescription}" 
                                               FontSize="13" 
                                               Foreground="#6c757d" 
                                               TextWrapping="Wrap" 
                                               Margin="0,0,10,0"/>

                                    <Button Grid.Row="2" Grid.Column="1" 
                                            Content="Redigere" 
                                            Command="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,6"
                                            Background="#6c757d"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            VerticalAlignment="Bottom">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#5a6268"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>