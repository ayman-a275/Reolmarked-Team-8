<Window x:Class="Reolmarked.View.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reolmarked.View"
        mc:Ignorable="d"
        Title="Redigere Produkt" 
        Height="650" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Redigere Produkt" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#212529" 
                           Margin="0,0,0,20"/>

                <Label Content="Serie nummer" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding ProductToEdit.ProductSerialNumber}" 
                         Style="{StaticResource ModernTextBox}"
                         IsEnabled="False"
                         Background="#e9ecef"
                         Margin="0,0,0,15"/>

                <Label Content="Reol nummer" Style="{StaticResource FormLabel}"/>
                <ComboBox ItemsSource="{Binding Shelfs}" 
                    DisplayMemberPath="ShelfNumber" 
                    SelectedValuePath="ShelfNumber" 
                    SelectedValue="{Binding SelectedShelfNumber, Mode=TwoWay}"
                    Height="40"
                    FontSize="14"
                    Margin="0,0,0,20"/>

                <Label Content="Beskrivelse" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding ProductDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,15"/>

                <Label Content="Pris (kr.)" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding ProductPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Command="{Binding SaveChangesCommand}" 
                            Content="Gem ændringer" 
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,10,0"/>

                    <Button Command="{Binding DeleteProductCommand}" 
                            Content="Slet produkt" 
                            Style="{StaticResource DangerButton}"
                            Margin="0,0,10,0"/>

                    <Button Command="{Binding CancelCommand}" 
                            Content="Annuller" 
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>