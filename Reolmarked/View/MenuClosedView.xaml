<UserControl x:Class="Reolmarked.View.MenuClosedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reolmarked.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="30">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#ffffff"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="BorderBrush" Value="#dddddd"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Border BorderThickness="1" Background="#f8f8f8" BorderBrush="#cccccc">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="OpenMenuBtn" Margin="5, 13, 5, 0" Background="Transparent" BorderThickness="0" Padding="0">
                        <Image Source="/Data/img/open_menu.png" Height="19" Width="18"/>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>


    </Grid>
</UserControl>
