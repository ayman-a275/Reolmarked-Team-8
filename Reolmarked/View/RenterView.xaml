<UserControl x:Class="Reolmarked.View.RenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reolmarked.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Navn" HorizontalAlignment="Left" Margin="96,21,0,0" VerticalAlignment="Top"/>
        <Label Content="Telefonnummer" HorizontalAlignment="Left" Margin="98,94,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding RenterTelephoneNumber, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="98,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118"/>
        <Button Command="{Binding AddRenterBtnClickCommand}" Content="Tilføj Lejer" HorizontalAlignment="Left" Margin="96,310,0,0" VerticalAlignment="Top" Width="94"/>
        <DataGrid ItemsSource="{Binding Renters}" Margin="253,189,36,13"/>
        <TextBox Text="{Binding RenterName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="96,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118"/>

    </Grid>
</UserControl>
