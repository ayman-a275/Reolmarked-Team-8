                         Margin="0,0,0,25"/>

                <Label Content="Pris (kr.)" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding RentedAgreedPrice, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,25"/>

                <Button Command="{Binding BtnBookShelfClickedCommand}" 
                        Content="Opret Leje" 
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Stretch"
                        Height="45"
                        FontSize="16"
                        Margin="0,0,0,15"/>

                <Separator Background="#dee2e6" Margin="0,25,0,20"/>

                <TextBlock Text="Valgte Reoler" 
                           FontWeight="SemiBold" 
                           FontSize="16" 
                           Foreground="#495057"
                           Margin="0,0,0,10"/>

                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding BookingShelfs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,5" Margin="0,2">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShelfClicked}" Value="True">
                                                    <Setter Property="Background" Value="#e7f3ff"/>
                                                    <Setter Property="BorderBrush" Value="#007bff"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal" Visibility="{Binding ShelfClicked, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="Reol " Foreground="#495057"/>
                                        <TextBlock Text="{Binding ShelfNumber}" FontWeight="Bold" Foreground="#007bff"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>