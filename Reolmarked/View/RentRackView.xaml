                        <Button x:Name="BtnRack78" Command="{Binding BtnRackClickedCommand}" CommandParameter="77" HorizontalAlignment="Left" Margin="124,713,0,0" VerticalAlignment="Top" Width="32" Height="60" Background="{Binding BookingRacks[77].RackColor, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RackButton}"/>
                        <Button x:Name="BtnRack79" Command="{Binding BtnRackClickedCommand}" CommandParameter="78" HorizontalAlignment="Left" Margin="200,713,0,0" VerticalAlignment="Top" Width="29" Height="60" Background="{Binding BookingRacks[78].RackColor, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RackButton}"/>
                        <Button x:Name="BtnRack80" Command="{Binding BtnRackClickedCommand}" CommandParameter="79" HorizontalAlignment="Left" Margin="231,713,0,0" VerticalAlignment="Top" Width="30" Height="60" Background="{Binding BookingRacks[79].RackColor, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RackButton}"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,0,0">
            <StackPanel>
                <TextBlock Text="Booking Detaljer" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#212529" 
                           Margin="0,0,0,20"/>

                <Border Background="#e7f3ff" 
                        CornerRadius="6" 
                        Padding="15" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Farve Forklaring" 
                                   FontWeight="SemiBold" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Border Width="20" Height="20" Background="#00a67d" CornerRadius="3" Margin="0,0,10,0"/>
                            <TextBlock Text="Ledig" VerticalAlignment="Center" Foreground="#495057"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Border Width="20" Height="20" Background="#cb2d6f" CornerRadius="3" Margin="0,0,10,0"/>
                            <TextBlock Text="Udlejet" VerticalAlignment="Center" Foreground="#495057"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Border Width="20" Height="20" Background="#0600d1" CornerRadius="3" Margin="0,0,10,0"/>
                            <TextBlock Text="Valgt" VerticalAlignment="Center" Foreground="#495057"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Label Content="Vælg Lejer" Style="{StaticResource FormLabel}"/>
                <ComboBox ItemsSource="{Binding Renters}" 
                         DisplayMemberPath="RenterName"
                         SelectedValuePath="RenterId"
                         Height="40"
                         FontSize="14"
                         Margin="0,0,0,25"/>

                <Button Content="📋 Opret/Ændre Leje" 
                        Command="{Binding BtnBookRackClickedCommand}" 
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Stretch"
                        Height="50"/>

                <Separator Background="#dee2e6" Margin="0,25,0,20"/>

                <TextBlock Text="Valgte Reoler" 
                           FontWeight="SemiBold" 
                           FontSize="16" 
                           Foreground="#495057"
                           Margin="0,0,0,10"/>

                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding BookingRacks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,5" Margin="0,2">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RackClicked}" Value="True">
                                                    <Setter Property="Background" Value="#e7f3ff"/>
                                                    <Setter Property="BorderBrush" Value="#007bff"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal" Visibility="{Binding RackClicked, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="Reol " Foreground="#495057"/>
                                        <TextBlock Text="{Binding RackNumber}" FontWeight="Bold" Foreground="#007bff"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>